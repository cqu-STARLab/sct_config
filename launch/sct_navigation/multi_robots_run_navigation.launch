    <group if="$(arg load_world_rviz)">
        <node pkg="rviz" type="rviz" name="world_navigation_rviz" required="true"
              args="-d $(find sct_config)/config/rviz/navigation/navigation_world.rviz"/>
    </group>
</launch>

